# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'SimpleAppDemo' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for SimpleAppDemo
  
  # Core Constraint Programmatically
  pod 'SnapKit', '~> 4.0.0'
  
  # Dependency Management
  pod 'Swinject', '~> 2.1.0'
  
  # Core RxSwift
  pod 'RxSwift',    '~> 4.0'
  pod 'RxCocoa',    '~> 4.0'
  
  
  # Community projects
  pod 'Action', '~> 3.4'
  pod 'NSObject+Rx', '~> 4.1'
  
  # Cache Image
  pod 'Kingfisher', '~> 4.0'
  
  # Check internet connection
  pod 'ReachabilitySwift', '~> 3'

  target 'SimpleAppDemoTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SimpleAppDemoUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
